        function closeModal() {
            document.getElementById('modal').style.display = 'none';
        }
        
        function calcularIndice() {
            const valorSegmento = parseFloat(document.getElementById('valor-segmento').value);
            const valorReferencia = parseFloat(document.getElementById('valor-referencia').value);
            
            if (valorSegmento && valorReferencia && valorReferencia !== 0) {
                const indice = (valorSegmento / valorReferencia) * 100;
                let interpretacion = '';
                let color = '';
                let estrategia = '';
                
                if (indice > 120) {
                    interpretacion = 'üî• Alta sobrerrepresentaci√≥n - Oportunidad premium';
                    color = '#27ae60';
                    estrategia = 'Desarrollar productos premium, maximizar valor, comunicaci√≥n aspiracional';
                } else if (indice > 100) {
                    interpretacion = 'üìà Sobrerrepresentaci√≥n moderada - Segmento objetivo';
                    color = '#f39c12';
                    estrategia = 'Mantener participaci√≥n, crecer volumen, optimizar precio-valor';
                } else if (indice >= 80) {
                    interpretacion = '‚öñÔ∏è Comportamiento promedio - Segmento estable';
                    color = '#3498db';
                    estrategia = 'Monitorear tendencias, mantener presencia, evaluar crecimiento';
                } else {
                    interpretacion = 'üìâ Subrepresentaci√≥n - Potencial de activaci√≥n';
                    color = '#e74c3c';
                    estrategia = 'Investigar barreras, desarrollar proposici√≥n espec√≠fica, probar activaci√≥n';
                }
                
                document.getElementById('resultado-indice').innerHTML = `
                    <div style="border-left: 4px solid ${color}; padding-left: 15px;">
                        <h4 style="color: ${color}; margin-bottom: 10px;">Resultado: ${indice.toFixed(1)}</h4>
                        <p style="margin-bottom: 10px;"><strong>${interpretacion}</strong></p>
                        <div style="background: ${color}20; padding: 10px; border-radius: 5px; font-size: 0.9em;">
                            <strong>üí° Estrategia recomendada:</strong><br>
                            ${estrategia}
                        </div>
                    </div>
                `;
            } else {
                document.getElementById('resultado-indice').innerHTML = '<p style="color: red;">‚ö†Ô∏è Por favor ingrese valores v√°lidos (mayor que 0)</p>';
            }
        }
        
